<div id="<%= dom_id todo %>">
  <p>
    <strong>Title:</strong>
    <%= todo.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= todo.description %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= todo.status %>
  </p>

  <p class="text-muted">
    <small>Last updated: <%= time_ago_in_words(todo.updated_at) %></small>
  </p>
</div>
